<!DOCTYPE html>
<html>
<head>
  <title>ZONA</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="title-bar menu-logo" data-responsive-toggle="menu-ejemplo">
  	<div class="logo">ZONA UNIVERSITARIA</div>
	</div>
	<div class="title-bar menu-mobile">
		<div class="menu-centered">
	  <ul class="menu">
	    <li>
        <%= link_to "Inicio", root_path %>
      </li>
      <li><%= link_to "Eventos", root_path %></li>
      <li><%= link_to "Revista", root_path %></li>
      <% if user_signed_in? %>
      <li><%= link_to "Salir", destroy_user_session_path ,class:"menu-right", method: :delete %></li>
      <li><a href="/articles/new" class="hollow button menu" style="background:none;">Crear inspiración</a></li>
      <% else %>
        <li><a href="/users/sign_in" class="hollow button">Ingresar / Registrarme</a></button></li>
      </ul>
      <%end%>
	</div>
	</div>

<div class="top-bar menu-desktop">
  <div class="top-bar-left">
    <ul class="dropdown menu" style="background:none;">
      <li class="menu-text">ZONA UNIVERSITARIA</li>
      <li>
        <%= link_to "Inicio", root_path %>
      </li>
      <li><%= link_to "Eventos", root_path %></li>
      <li><%= link_to "Revista", root_path %></li>
    </ul>
  </div>
  <div class="top-bar-right">
  	<% if user_signed_in? %>
     <a href="/articles/new" class="hollow button menu" style="background:none;">Crear inspiración</a>
    </ul>
	  <%= link_to "Mi cuenta", edit_user_registration_path, class:"menu-right" %>
	  <%= link_to "Salir", destroy_user_session_path ,class:"menu-right", method: :delete %>
	 </ul>
	<% else %> 
    <ul class="menu" style="background:none;">
     <a href="/users/sign_in" class="hollow button">Ingresar / Registrarme</a></button>
    </ul>
    	    <%end%>
  </div>
</div>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<%= yield %>

</body>

<div class="footer">
    <div class="menu-centered">
    <ul class="menu">
      <li><%= link_to "Sobre nosotros", '/acerca' %></li>
      <li><%= link_to "Empleo", '/empleo' %></li>
      <li><%= link_to "Negocios", root_path %></li>
      <li><%= link_to "Términos de servicio", '/terminos' %></li>
      <li><%= link_to "Privacidad", '/privacidad' %></li>
    </ul>
  </div>
  </div>
</html>
