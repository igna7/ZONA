<%= form_for (@article) do |f| %>
	<div class="field" style="font-size:20px">
	<label for="exampleFileUpload" class="button">Subir imagen</label> Seleccionar imagen de portada <%= f.file_field :cover, class:"button show-for-sr", id:"exampleFileUpload"%>
	</div>
	<div class="field">
		<%= f.text_field :title, placeholder: "Título" %>
	</div>
	<div class="field">
		<%= f.text_area :body, placeholder: "Escribe tu inspiración aquí", style:"height: 200px;" %>
	</div>
	<div class="field menu-centered">
		<h3>Categorías</h3>
		<% @categories.each do |category| %>
			<div><%= check_box_tag "categories[]", category.id %> <%= category.name %></div>
		<%end%>
	</div>
	<div class="field">
		<%= f.submit "Guardar" , class:"btn be-blue expanded button"%>
	</div>
<%end%>