<div class="contenido-desk">
  <div class="square-mobile">
      <p class="text-center"><i class="material-icons blue10">account_circle</i></p>
    <h2 class="text-center">Iniciar sesión</h2><hr/>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs text-center">
        <%= f.input :email, required: false, autofocus: true, label: "Correo electrónico",placeholder: "miusuario@dominio.com" %>
        <%= f.input :password, required: false, label: "Contraseña" %>
        <div>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "¿Olvidaste la contraseña?", new_password_path(resource_name) %><br />
      <% end -%>
      </div>
        <%= f.input :remember_me, label: "Recordarme" , class:"text-center",as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Iniciar sesión" , class:"button btn-box"%>
      </div>
    <% end %>
    <hr/><h2 class="text-center">o inicie sesión con</h2>
    <p class="text-center"><%= link_to "Facebook", omniauth_authorize_path(resource_name, :facebook) ,class:"button btn-fb"%><br /></p>
  </div>

  <div class="float-btm-mobile">
      <p class="text-center">¿Eres nuevo en <b>ZONA UNIVERSITARIA?</b></p>
      <div class="hollow button btn-box">
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "Crear una cuenta", new_registration_path(resource_name) %><br />
      <% end -%>
      </div>
  </div>

</div>