<div class="contenido">
<h2 align="center">Editar mis datos</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

<div class="row">
  <div class="col-md-12 col-centered">
    <div class="form-inputs">
    <%= f.input :name, label: "Nombre", required: true, autofocus: true %>
    <%= f.input :email, label: "Correo", required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :current_password, label: "Contraseña actual",placeholder:"Ingresa tu contraseña actual aquí", required: true %>

    <div align="center"><h5><b>¿Quieres cambiar tu contraseña?</b></h5>Si no es así, deja estos campos vacíos y dale en "Actualizar"</div>
    <%= f.input :password, label: "Contraseña", placeholder:"Ingresa tu nueva contraseña aquí",autocomplete: "off", required: false %>
    <%= f.input :password_confirmation, label: "Confirmar contraseña" ,placeholder:"Confirma tu nueva contraseña aquí",required: false %>
  </div>
  </div>
  <div align="center" class="form-actions">
    <%= f.button :submit, "Actualizar",class:"button" %>
  </div>
<% end %>
</div>

<div align="center"><h3>Cancelar tu cuenta</h3>

<p>¿Ya no estás feliz? <%= link_to "Eliminar mi cuenta", registration_path(resource_name), data: { confirm: "¿Estás seguro?" }, method: :delete %></p>
</div>
</div>